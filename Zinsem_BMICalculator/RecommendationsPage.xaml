<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Zinsem_BMICalculator.RecommendationsPage"
    Title="Recommendations">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Health Recommendations"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Frame CornerRadius="16" Padding="16">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="SummaryLabel" FontSize="18" />
                    <Label x:Name="RecommendationLabel" FontSize="18" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Back to Result Page"
                    Clicked="OnBackToResultClicked"
                    HeightRequest="52"
                    CornerRadius="16"/>

            <Button Text="Back to Input Page"
                    Clicked="OnBackToInputClicked"
                    HeightRequest="52"
                    CornerRadius="16"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
