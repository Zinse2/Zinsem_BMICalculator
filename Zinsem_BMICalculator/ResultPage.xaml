<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Zinsem_BMICalculator.ResultPage"
    Title="BMI Result">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="BMI Result"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <Frame CornerRadius="16" Padding="16">
            <VerticalStackLayout Spacing="10">
                <Label x:Name="GenderLabel" FontSize="18"/>
                <Label x:Name="BmiLabel" FontSize="22" FontAttributes="Bold"/>
                <Label x:Name="CategoryLabel" FontSize="20"/>
            </VerticalStackLayout>
        </Frame>

        <Button Text="Go to Recommendations"
                Clicked="OnGoToRecommendationsClicked"
                HeightRequest="52"
                CornerRadius="16"/>

        <Button Text="Back to Input Page"
                Clicked="OnBackToInputClicked"
                HeightRequest="52"
                CornerRadius="16"/>

    </VerticalStackLayout>
</ContentPage>
